<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path, :html => { class: "form-horizontal", role: "form" }) do |f| %>

      <div class="form-group">
        <div class="control-label col-sm-4">
          <%= f.label :user_name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :user_name, class: "form-control", placeholder: "Usuario", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-4">
          <%= f.label :password %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span>Remember me on this computer</span>
        <% end %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
          <%= f.submit "Log in", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>