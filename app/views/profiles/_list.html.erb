 <table class="table table-striped">
  <thead>
      <tr>
        <th>Name</th>
        <th>Symbol</th>
        <th>Current price</th>
        <% if @user.id == current_user.id %>
          <th>Actions</th>
        <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_stocks.each do |stock| %>
    <tr>
      <td><%= stock.name %></td>
      <td><%= stock.ticker %></td>
      <td><%= stock.last_price %></td>
      <% if @user.id == current_user.id %>
        <td><%= link_to 'Delete this stock', user_stock_path(stock),
                data: {confirm: "Are you sure?"},
                class: "btn btn-xs btn-danger", method: :delete %></td>
      <% end %>
    </tr>
    <% end%>
  <tbody>
</table>