<%= form_for(@user, url: yield(:url), :html => { class: "form-horizontal", role: "form" }) do |f| %>
  <%= render 'shared/error_messages' %>
  
  <div class="form-group">
    <div class="control-label col-sm-4">
    <%= f.label :user_name %>
    </div>
    <div class="col-sm-8">
    <%= f.text_field :user_name, class: "form-control", placeholder: "Usuario", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-4">
    <%= f.label :name %>
    </div>
    <div class="col-sm-8">
    <%= f.text_field :name, class: "form-control", placeholder: "Nombres", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-4">
    <%= f.label :last_name %>
    </div>
    <div class="col-sm-8">
    <%= f.text_field :last_name, class: "form-control", placeholder: "Apellidos", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-4">
    <%= f.label :email %>
    </div>
    <div class="col-sm-8">
    <%= f.email_field :email, class: "form-control", placeholder: "Correo electrÃ³nico", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-4">
    <%= f.label :admin %>
    </div>
    <div class="col-sm-8">
    <%= f.select :admin, [['Si', true], ['No', false]] %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-4">
    <%= f.label :password_expires %>
    </div>
    <div class="col-sm-8">
    <%= f.select :password_expires, [['Si', true], ['No', false]] %>
    </div>
  </div>

  <% if @user.new_record? %>
    <div class="form-group">
      <div class="control-label col-sm-4">
      <%= f.label :password %>
      </div>
      <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", placeholder: "Password", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-4">
      <%= f.label :password_confirmation %>
      </div>
      <div class="col-sm-8">
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password", autofocus: true %>
      </div>
    </div>
  <% else%>
    <div class="form-group">
    <div class="control-label col-sm-4">
    <%= f.label :active %>
    </div>
    <div class="col-sm-8">
    <%= f.select :active, [['Si', true], ['No', false]] %>
    </div>
  </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-12">
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
